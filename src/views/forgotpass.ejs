      <a id="logo-container" href=/dashboarded" class="brand-logo">Story Books</a>
    </div>
  </nav>
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <br><br>
      <div class="row center">
        <div class="col s6 offset-s3">
          <div class="card">
            <div class="card-content">
              <span class="card-title"><b>Can't tell your story because you forgot your password? We got you</b></span>
            </div>

            <div class="card-title">
                <form class="col s12" action="login">

                    <div class="row">
                        <div class="input-field col s12">
                          <label class="active" for="email">Email</label>
                          <input id="email" type="email" class="validate" name="email">
                        </div>
                        <div class="email error"></div>
                    </div>


                    <div class="row">
                        <div class="input-field col s12">
                          <label class="active" for="password">New Password</label>
                          <input id="npassword" type="password" class="validate" name="npassword">
                        </div>
                        <div class="password error"></div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                          <label class="active" for="password">Confirm New Password</label>
                          <input id="cnpassword" type="password" class="validate" name="cnpassword">
                        </div>
                        <div class="password error"></div>
                    </div>

                    <div class="row">
                        <button class="btn waves-effect waves-light" style="font-size: 25px;" type="submit">Change Password
                        </button> &nbsp;
                    </div>
                  
                </form>
              </div>


            <div class="card-action">
                <a href="/login">
                  Login
                </a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const form = document.querySelector('form')
    const emailError = document.querySelector('.email.error')
    const passwordError = document.querySelector('.password.error')


    form.addEventListener('submit', async (e) => {
      e.preventDefault()

      // Reset errors
      emailError.textContent = ''
      passwordError.textContent = ''

      // Get the values
      const email = form.email.value
      const npassword = form.npassword.value
      const cnpassword = form.cnpassword.value
  
